<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxo"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/consulta_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/consulta_re"
        android:gravity="center_horizontal"

        android:textSize="60sp"
        android:fontVariationSettings="'wght' 800"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/branco"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/logo_br"
        android:tint="@color/roxo"
        android:tintMode="screen"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/consulta_re" />

</androidx.constraintlayout.widget.ConstraintLayout>